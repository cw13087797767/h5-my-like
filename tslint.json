{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "triple-equals": [
      false
    ],
    "prefer-const": [
      false
    ],
    "comment-format": [
      false,
      "check-space"
    ],
    "no-console": false,
　　"trailing-comma": [
      true, 
      {
　　　　"singleline": "never",
　　　　"multiline": {
　　　　　　"objects": "ignore",
　　　　　　"arrays": "always",
　　　　　　"functions": "never",
　　　　　　"typeLiterals": "ignore"
　　　　}
　　}],
    "no-debugger":false,
    "no-trailing-whitespace":false,
    "no-unused-expression":false,
    "no-empty":[ 
      true,
      "allow-empty-catch"],
    "return-undefined":false
  }
}
